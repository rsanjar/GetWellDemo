@model Clinic

@{
    bool isReadOnly = !User.IsInRole(UserRoles.Admin);
}

<div class="row clearfix">
    <div class="col-md-12">
        <div class="card">
            <div class="header">
                <h2>
                    <strong>Учетная</strong> Запись
                    <small>Данные учетной записи...</small>
                </h2>
            </div>
            <div class="body">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label asp-for="Account.MobilePhone">Номер Телефона</label>
                            <input asp-for="Account.MobilePhone" type="tel" readonly="@isReadOnly" class="form-control phone-number" />
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label asp-for="Account.Email">Эл. Почта</label>
                            <input asp-for="Account.Email" type="email" readonly="@isReadOnly" class="form-control" />
                        </div>
                    </div>
                    @if (Model.ID <= 0)
                    {
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label asp-for="Account.Password">Пароль</label>
                                <input asp-for="Account.Password" type="password" readonly="@isReadOnly" class="form-control" />
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label asp-for="Account.ConfirmPassword">Подтвердить Пароль</label>
                                <input asp-for="Account.ConfirmPassword" type="password" readonly="@isReadOnly" class="form-control" />
                            </div>
                        </div>
                    }
                    <div class="col-sm-6">
                        <div class="input-group m-t-10 m-b-10">
                            <div class="checkbox">
                                <input asp-for="Account.IsActive" type="checkbox" class="form-control" />
                                <label asp-for="Account.IsActive" disabled="@isReadOnly">Активирован</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

