@model Doctor

<div class="row clearfix">
    <div class="col-md-12">
        <div class="card">
            <div class="header">
                <h2>
                    <strong>Список</strong> Телефонов
                    <small>Номера телефонов врача...</small>
                </h2>
            </div>
            <div class="body">
                <div class="row">
                    @for (int i = 1; i <= 5; i++)
                    {
                        int index = i - 1;

                        <div class="col-sm-10">
                            <div class="form-group">
                                <label asp-for="Phones[index].Phone"></label>
                                <input asp-for="Phones[index].Phone" type="tel" class="form-control phone-number" />
                            </div>
                        </div>
                        <div class="col-sm-2">
                            <div class="input-group m-t-5 m-b-10">
                                <div class="checkbox">
                                    <input asp-for="Phones[index].IsPrimary" type="checkbox" class="form-control"/>
                                    <label asp-for="Phones[index].IsPrimary"></label>
                                    <input asp-for="Phones[index].ID" type="hidden"/>
                                    <input asp-for="Phones[index].DateCreated" type="hidden"/>
                                    <input asp-for="Phones[index].IsActive" type="hidden"/>
                                    <input asp-for="Phones[index].IsMobile" type="hidden"/>
                                    <input asp-for="Phones[index].IsWorkPhone" type="hidden"/>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>