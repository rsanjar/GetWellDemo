@model ServiceCategory

@{
    ViewData["Title"] = Model != null && Model.ID > 0 ? $"{Model.Name} - Редактировать Тип Услуг" : "Добавить Тип Услуг";
}

@await Html.PartialAsync("PageHeader")

<div class="container-fluid">
    <form enctype="multipart/form-data" data-ajax-url="@(Model.ID > 0 ? Url.Action("Edit", "ServiceCategory") : Url.Action("Add", "ServiceCategory"))"
          data-ajax-begin="begin" data-ajax-loading="#fountainG"
          data-ajax-method="post" data-ajax="true" data-ajax-mode="replace"
          data-ajax-update="#SaveFormMessageID" data-ajax-complete="complete">

        @{ await Html.RenderPartialAsync("Cards/ServiceCategoryCard", Model); }

        @{ await Html.RenderPartialAsync("FormSubmitSection"); }

        <input asp-for="ID" type="hidden"/>
    </form>
</div>
