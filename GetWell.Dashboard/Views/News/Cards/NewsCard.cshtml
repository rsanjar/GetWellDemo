@model News

<div class="row clearfix">
    <div class="col-md-12">
        <div class="card">
            <div class="header">
                <h2>
                    <strong>Новости</strong>
                    <small>Детали Новостей...</small>
                </h2>
            </div>
            <div class="body">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label asp-for="NewsLanguage"></label>
                            <select asp-for="NewsLanguage" asp-items="Model.Languages" class="form-control custom-select"></select>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label asp-for="Title"></label>
                            <input asp-for="Title" type="text" class="form-control" />
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="input-group m-t-5 m-b-10">
                            <div class="checkbox">
                                <input asp-for="IsDisabled" type="checkbox" class="form-control" />
                                <label asp-for="IsDisabled"></label>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="input-group m-t-5 m-b-10">
                            <div class="checkbox">
                                <input asp-for="IsFeatured" type="checkbox" class="form-control" />
                                <label asp-for="IsFeatured"></label>
                            </div>
                        </div>
                    </div>
                    @if (Model != null && !string.IsNullOrWhiteSpace(Model.BannerUrl))
                    {
                        <div class="col-md-12">
                            <div class="form-group m-t-10 m-b-30 m-l-20">
                                <img class="img w-25" src="@Model.BannerUrl" alt="" />
                            </div>
                        </div>
                    }
                    <div class="col-sm-12">
                        <div class="form-group">
                            <label asp-for="Image"></label>
                            <input type="file" asp-for="Image" accept="image/*" class="form-control" />
                            <input type="hidden" asp-for="Image" />
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <div class="form-group">
                            <textarea id="ckeditor" name="Body">@Html.Raw(Model.Body)</textarea>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>