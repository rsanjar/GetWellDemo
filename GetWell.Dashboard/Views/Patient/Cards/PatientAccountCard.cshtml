@model Patient

<div class="row clearfix">
    <div class="col-md-12">
        <div class="card">
            <div class="header">
                <h2>
                    <strong>Учетная</strong> Запись
                    <small>Данные учетной записи...</small>
                </h2>
            </div>
            <div class="body">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label asp-for="PatientAccount.MobilePhone"></label>
                            <input asp-for="PatientAccount.MobilePhone" type="tel" class="form-control phone-number" />
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label asp-for="PatientAccount.Email"></label>
                            <input asp-for="PatientAccount.Email" type="email" class="form-control" />
                        </div>
                    </div>
                    @if (Model.PatientAccount == null || Model.PatientAccount.ID <= 0)
                    {
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label asp-for="PatientAccount.Password"></label>
                                <input asp-for="PatientAccount.Password" type="password" class="form-control" />
                            </div>
                        </div>
                    }
                    else
                    {
                        <input type="hidden" asp-for="PatientAccount.PatientID" />
                        <input type="hidden" asp-for="PatientAccount.ID" />
                    }
                    <div class="col-sm-6">
                        <div class="input-group m-t-10 m-b-10">
                            <div class="checkbox">
                                <input asp-for="PatientAccount.IsActive" type="checkbox" class="form-control" />
                                <label asp-for="PatientAccount.IsActive"></label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>