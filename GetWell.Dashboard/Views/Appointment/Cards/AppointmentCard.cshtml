@model Appointment

<div class="row clearfix">
    <div class="col-md-12">
        <div class="card">
            <div class="header">
                <h2>
                    <strong>Время</strong>
                    <small>Данные записи...</small>
                </h2>
            </div>
            <div class="body">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group input-group">
                            <span class="input-group-addon">
                                <i class="zmdi zmdi-calendar"></i>
                            </span>
                            <label asp-for="AppointmentDate"></label>
                            <input asp-for="AppointmentDate" type="text" class="datetimepicker form-control" />
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label asp-for="AppointmentTimeStr"></label>
                            <select asp-for="AppointmentTimeStr" disabled="disabled" class="form-control custom-select">
                                <option>Выберите Время</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="input-group m-t-20 m-b-10">
                            <div class="checkbox">
                                <input asp-for="DoctorConfirmed" type="checkbox" class="form-control" />
                                <label asp-for="DoctorConfirmed"></label>
                            </div>
                        </div>
                    </div>
                    @if (Model.ID > 0)
                    {
                        <div class="col-sm-6">
                            <div class="input-group m-t-20 m-b-10">
                                <div class="checkbox">
                                    <input asp-for="IsCanceled" type="checkbox" class="form-control" />
                                    <label asp-for="IsCanceled"></label>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="input-group m-t-10 m-b-10">
                                <div class="checkbox">
                                    <input asp-for="IsRefunded" type="checkbox" class="form-control" />
                                    <label asp-for="IsRefunded"></label>
                                </div>
                            </div>
                        </div>
                    }
                    <div class="col-sm-6">
                        <div class="form-group mt-2">
                            <input asp-for="DiscountPercentage" type="range" min="0" max="100" class="form-control" oninput="document.getElementById('DiscountPercentageLabel').innerHTML=this.value;" />
                            <label asp-for="DiscountPercentage">Скидка:<b id="DiscountPercentageLabel">@(Model.DiscountPercentage)</b>%</label>
                            <input type="hidden" asp-for="ID" />
                            <input type="hidden" asp-for="PatientID" />
                            <input type="hidden" asp-for="IsArchived" />
                            <input type="hidden" asp-for="IsPaid" />
                            <input type="hidden" asp-for="AppointmentTime" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>