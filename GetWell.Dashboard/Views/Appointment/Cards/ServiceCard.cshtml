@model Appointment

<div class="row clearfix">
    <div class="col-md-12">
        @if (User.IsInRole(UserRoles.Doctor))
        {
            <div class="card">
                <div class="header">
                    <h2>
                        <strong>Услуга</strong>
                        <small>Выберите Услугу</small>
                    </h2>
                </div>
                <div class="body">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label asp-for="ServiceClinicID"></label>
                                <select asp-for="ServiceClinicID" disabled="disabled" class="form-control custom-select">
                                    <option>Услуга</option>
                                </select>
                            </div>

                            <input type="hidden" asp-for="ClinicDoctorID" value="@User.ID()" />
                            <input type="hidden" asp-for="ServiceClinicDoctorID" />
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="card">
                <div class="header">
                    <h2>
                        <strong>Услуга и Врач</strong>
                        <small>Выберите Услугу и Врача</small>
                    </h2>
                </div>
                <div class="body">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label asp-for="ServiceClinicID"></label>
                                <select asp-for="ServiceClinicID" disabled="disabled" class="form-control custom-select">
                                    <option>Услуга</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label asp-for="ClinicDoctorID"></label>
                                <select asp-for="ClinicDoctorID" disabled="disabled" class="form-control custom-select">
                                    <option>Врач</option>
                                </select>
                            </div>

                            <input type="hidden" asp-for="ServiceClinicDoctorID" />
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>